
<% layout('./layouts/boilerplate.ejs') %>

<div id="cluster-map"></div>
<h1 class="">All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add Campground</a>
</div>


<% for ( let c of campgrounds) {%>
    <div class='card mb-3' >
        <div class="row">
            <div class="col-md-4">
                <% if(c.images.length){ %>
                <img alt="" class="img-fluid" src="<%= c.images[0].url %>">
                <%}else{%>
                <img alt="" class="img-fluid" src="https://res.cloudinary.com/dvuif2x20/image/upload/v1711006009/YelpCamp/khpzyqafzsubk9kljah7.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5><%= c.title %></h5>
                    <p class="card-text"><%= c.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= c.location %></small>
                    </p>
                    <a href="/campgrounds/<%= c._id %>" class="btn btn-primary">View <%= c.title %></a>
                </div>
            </div>
        </div>
    </div>
<% } %>
<script>
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
    const campgrounds = {features: `<%-JSON.stringify(campgrounds) %>`}
</script>
<script src="/javascripts/clusterMap.js"></script>
